#!/usr/bin/env sh
##############################################################################
# Gradle start up script for UN*X
##############################################################################
set -e

PRG="$0"
while [ -h "$PRG" ] ; do
  ls=`ls -ld "$PRG"`
  link=`expr "$ls" : '.*-> \(.*\)$'`
  if expr "$link" : '/.*' > /dev/null; then
    PRG="$link"
  else
    PRG=`dirname "$PRG"`"/"$link
  fi
done

SAVED="`pwd`"
cd `dirname "$PRG"`/.
PRGDIR=`pwd -P`
cd "$SAVED"

exec java -jar "$PRGDIR/gradle/wrapper/gradle-wrapper.jar" "$@"
